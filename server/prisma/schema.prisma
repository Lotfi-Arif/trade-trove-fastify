datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String   @id @default(uuid())
  userId    String
  label     String
  done      Boolean
  createdAt DateTime
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  order     Order[]
  createdAt DateTime
}

model Product {
  id        String   @id @default(uuid())
  name      String
  price     Float
  quantity  Int
  order     Order[]
  createdAt DateTime
}

model Order {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int
  createdAt DateTime
}
